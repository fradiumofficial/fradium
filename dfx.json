{
  "version": 1,
  "canisters": {
    "backend": {
      "main": "src/backend/main.mo",
      "type": "motoko",
      "dependencies": ["token", "internet_identity"]
    },
    "frontend": {
      "dependencies": ["backend"],
      "source": ["src/frontend/dist"],
      "type": "assets",
      "workspace": "frontend",
      "dependencies": ["backend", "ransomware_detector", "bitcoin", "token", "chatbot"]
    },
    "internet_identity": {
      "candid": "https://github.com/dfinity/internet-identity/releases/latest/download/internet_identity.did",
      "frontend": {},
      "remote": {
        "id": {
          "ic": "rdmx6-jaaaa-aaaaa-aaadq-cai",
          "playground": "rdmx6-jaaaa-aaaaa-aaadq-cai"
        }
      },
      "type": "custom",
      "wasm": "https://github.com/dfinity/internet-identity/releases/latest/download/internet_identity_dev.wasm.gz"
    },
    "chatbot": {
      "dependencies": ["llm"],
      "main": "src/chatbot/chatbot.mo",
      "type": "motoko"
    },
    "llm": {
      "type": "custom",
      "candid": "https://github.com/dfinity/llm/releases/latest/download/llm-canister-ollama.did",
      "wasm": "https://github.com/dfinity/llm/releases/latest/download/llm-canister-ollama.wasm"
    },
    "token": {
      "main": "src/token/token.mo",
      "type": "motoko",
      "build": "scripts/build.fradium_token.sh"
    },
    "bitcoin": {
      "main": "src/bitcoin/Main.mo",
      "type": "motoko",
      "init_arg": "(variant { regtest })"
    },
    "ransomware_detector": {
      "type": "rust",
      "package": "ransomware_detector",
      "candid": "src/ai/detector_service/src/ransomware_detector.did",
      "build": ["./bin/build.sh"]
    }
  },
  "defaults": {
    "build": {
      "args": "",
      "packtool": "mops sources"
    },
    "bitcoin": {
      "enabled": true,
      "nodes": ["127.0.0.1:18444"]
    }
  },
  "output_env_file": ".env",
  "networks": {
    "local": {
      "bind": "127.0.0.1:4943",
      "type": "ephemeral",
      "max_ingress_bytes_per_message": 10000000
    },
    "ic": {
      "providers": ["https://ic0.app"],
      "type": "persistent"
    }
  }
}
