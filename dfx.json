{
  "version": 1,
  "canisters": {
    "ai": {
      "type": "custom",
      "package": "ai",
      "candid": "src/ai/ai.did",
      "optimize": "cycles",
      "wasm": "target/wasm32-unknown-unknown/release/ai.wasm",
      "metadata": [
        {
          "name": "candid:service"
        }
      ],
      "build": ["cargo build --target wasm32-unknown-unknown --release -p ai", "candid-extractor target/wasm32-unknown-unknown/release/ai.wasm > src/ai/ai.did"]
    },
    "wallet": {
      "candid": "src/wallet/wallet.did",
      "wasm": "target/wasm32-unknown-unknown/release/wallet.wasm",
      "package": "wallet",
      "type": "custom",
      "metadata": [
        {
          "name": "candid:service"
        }
      ],
      "build": ["bash src/wallet/build.sh", "candid-extractor target/wasm32-unknown-unknown/release/wallet.wasm > src/wallet/wallet.did"],
      "init_arg": "(variant { Local })",
      "_mainnet_init_arg": "(variant { Mainnet })",
      "dependencies": ["sol_rpc"]
    },
    "sol_rpc": {
      "candid": "https://github.com/dfinity/sol-rpc-canister/releases/download/v1.0.0/sol_rpc_canister.did",
      "package": "sol_rpc_canister",
      "type": "custom",
      "remote": {
        "id": {
          "ic": "tghme-zyaaa-aaaar-qarca-cai",
          "playground": "tghme-zyaaa-aaaar-qarca-cai",
          "local": "tghme-zyaaa-aaaar-qarca-cai"
        }
      },
      "wasm": "https://github.com/dfinity/sol-rpc-canister/releases/download/v1.0.0/sol_rpc_canister.wasm.gz",
      "init_arg": "( record { manageApiKeys = null; overrideProvider = null; logFilter = opt variant { ShowAll }; numSubnetNodes = null; mode = opt variant { Demo }; } )"
    },
    "evm_rpc": {
      "candid": "https://github.com/internet-computer-protocol/evm-rpc-canister/releases/latest/download/evm_rpc.did",
      "init_arg": "(record { })",
      "remote": {
        "id": {
          "ic": "7hfb6-caaaa-aaaar-qadga-cai",
          "local": "7hfb6-caaaa-aaaar-qadga-cai"
        }
      },
      "type": "custom",
      "wasm": "https://github.com/internet-computer-protocol/evm-rpc-canister/releases/latest/download/evm_rpc.wasm.gz"
    },
    "backend": {
      "main": "src/backend/main.mo",
      "type": "motoko"
    },
    "frontend": {
      "source": ["src/frontend/dist"],
      "type": "assets",
      "workspace": "frontend"
    },
    "internet_identity": {
      "candid": "https://github.com/dfinity/internet-identity/releases/latest/download/internet_identity.did",
      "frontend": {},
      "remote": {
        "id": {
          "ic": "rdmx6-jaaaa-aaaaa-aaadq-cai",
          "playground": "rdmx6-jaaaa-aaaaa-aaadq-cai"
        }
      },
      "type": "custom",
      "wasm": "https://github.com/dfinity/internet-identity/releases/latest/download/internet_identity_dev.wasm.gz"
    },
    "chatbot": {
      "dependencies": ["llm"],
      "main": "src/chatbot/chatbot.mo",
      "type": "motoko"
    },
    "llm": {
      "type": "custom",
      "candid": "https://github.com/dfinity/llm/releases/latest/download/llm-canister-ollama.did",
      "wasm": "https://github.com/dfinity/llm/releases/latest/download/llm-canister-ollama.wasm"
    },
    "fradium_token": {
      "type": "custom",
      "candid": "src/token/token_ledger.did",
      "wasm": "src/token/token-ledger.wasm.gz"
    },
    "fradium_token_index": {
      "type": "custom",
      "candid": "src/token/token_index.did",
      "wasm": "src/token/token-index.wasm.gz"
    }
  },
  "defaults": {
    "build": {
      "args": "",
      "packtool": "mops sources"
    },
    "bitcoin": {
      "enabled": true,
      "nodes": ["127.0.0.1:18444"]
    }
  },
  "output_env_file": ".env",
  "networks": {
    "local": {
      "bind": "127.0.0.1:4943",
      "type": "ephemeral",
      "max_ingress_bytes_per_message": 10000000
    },
    "ic": {
      "providers": ["https://ic0.app"],
      "type": "persistent"
    }
  }
}
